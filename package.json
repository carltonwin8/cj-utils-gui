{
  "name": "cj-utils-gui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.1.0",
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typeface-roboto": "^0.0.54"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist": "yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rm -rf build dist",
    "reset": "yarn clean && rm -rf node_modules",
    "start:3210:nb": "cross-env BROWSER=none PORT=3210 yarn react-scripts start",
    "e:dev:reload": "nodemon --watch ./public --exec 'electron .'",
    "e:dev:reload:win": "run on cli - npx nodemon --watch ./public --exec 'npx electron .'",
    "dev": "concurrently \"yarn start:3210:nb\" \"wait-on http://localhost:3210 && yarn e:dev:reload\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.1",
    "wait-on": "^3.2.0"
  },
  "main": "./public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.carltonjoseph",
    "copyright": "Copyright Â© 2019 Carlton Joseph",
    "productName": "cj-utils-gui",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "build/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/assets/icon.png",
      "target": "portable"
    }
  }
}
